{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "nlang",
	"patterns": [
		{ "include": "#comments" },
		{ "include": "#keywords" },
		{ "include": "#strings" },
		{ "include": "#constants" },
		{ "include": "#operators" },
		{ "include": "#types" },
		{ "include": "#support" },
		{ "include": "#entities" },
		{ "include": "#punctuation" }
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash.nlang",
					"match": "//.*"
				},
				{
					"name": "comment.block.nlang",
					"begin": "/\\*",
					"end": "\\*/"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.nlang",
					"match": "\\b(if|else|while|for|return|break|continue)\\b"
				},
				{
					"name": "keyword.storage.type.nlang",
					"match": "\\b(store|def)\\b"
				},
				{
					"name": "keyword.storage.modifier.nlang",
					"match": "\\b(export)\\b"
				},
				{
					"name": "keyword.control.import.nlang",
					"match": "\\b(import|from|as)\\b"
				},
				{
					"name": "keyword.other.nlang",
					"match": "\\b(ASSIGN_MAIN)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.nlang",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.nlang",
					"match": "\\\\."
				}
			]
		},
		"constants": {
			"patterns": [
				{
					"name": "constant.language.nlang",
					"match": "\\b(true|false|null)\\b"
				},
				{
					"name": "constant.numeric.nlang",
					"match": "\\b-?\\d+(\\.\\d+)?([eE][+-]?\\d+)?(i(8|16|32|64|size)|u(8|16|32|64|size)|f(32|64))?\\b"
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.assignment.nlang",
					"match": "="
				},
				{
					"name": "keyword.operator.comparison.nlang",
					"match": "==|!=|<=|>=|<|>"
				},
				{
					"name": "keyword.operator.arithmetic.nlang",
					"match": "\\+|-|\\*|/|%"
				},
				{
					"name": "keyword.operator.logical.nlang",
					"match": "&&|\\|\\|!"
				},
				{
					"name": "keyword.operator.arrow.nlang",
					"match": "->"
				}
			]
		},
		"types": {
			"patterns": [
				{
					"name": "storage.type.nlang",
					"match": "\\b(int|i8|i16|i32|i64|isize|u8|u16|u32|u64|usize|float|f32|f64|bool|string|void)\\b"
				}
			]
		},
		"support": {
			"patterns": [
				{
					"name": "support.function.nlang",
					"match": "\\b(println|print|str|int|float|abs|abs_float|len|max|min|pow|bool)\\b(?=\\()"
				}
			]
		},
		"entities": {
			"patterns": [
				{
					"name": "entity.name.function.nlang",
					"match": "(?<=def\\s+)[a-zA-Z_][a-zA-Z0-9_]*"
				}
			]
		},
		"punctuation": {
			"patterns": [
				{
					"name": "punctuation.terminator.statement.nlang",
					"match": ";"
				},
				{
					"name": "punctuation.separator.comma.nlang",
					"match": ","
				},
				{
					"name": "punctuation.separator.colon.nlang",
					"match": ":"
				},
				{
					"name": "punctuation.accessor.dot.nlang",
					"match": "."
				}
			]
		}
	},
	"scopeName": "source.nlang"
}