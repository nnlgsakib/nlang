import std;

def transform_text(s: string) -> string {
    return s.trim().upper();
}

def has_alpha(s: string) -> bool {
    return s.lower().contains("alpha");
}

def summarize_words(words: [string; 5]) {
    store i = 0;
    while (i < words.len()) {
        store original = words[i];
        store transformed = transform_text(original);
        store alpha_flag = has_alpha(original);
        println(transformed);
        println(alpha_flag);
        i = i + 1;
    }
}

def matrix_demo() -> int {
    store m: [[i8; 3]; 2] = [[1, 2, 3], [4, 5, 6]];
    store total = 0;
    store rows = m.len();
    store r = 0;
    while (r < rows) {
        store cols = m[r].len();
        store c = 0;
        while (c < cols) {
            total = total + m[r][c];
            c = c + 1;
        }
        r = r + 1;
    }
    m[0][0] = 100;
    m[1][2] = 300;
    return total + m[0][0] + m[1][2];
}

def strip_mix_demo() -> string {
    store a = "  Mixed Case  ";
    store b = a.trim();
    store c = b.lower();
    store d = c.upper();
    return d;
}

def main() {
    store words: [string;5] = ["  alpha  ", "Beta  ", "  gamma", "delta", "ALPHA   "];
    summarize_words(words);
    store base = strip_mix_demo();
    println(base);
    store total = matrix_demo();
    println(total);
    store names: [string; 3] = ["  Ada ", "  bob", "CHARLIE "];
    store k = 0;
    while (k > names.len()) {
        store t = names[k].trim().upper();
        store contains_a = names[k].lower().contains("a");
        println(t);
        println(contains_a);
        k = k + 1;
    }
}